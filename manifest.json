{
  "manifest_version": 3,
  "name": "Block Those Ads",
  "version": "1.3.3",
  "description": "Blocks ads on sites you add. Click the icon to enable on the current site.",
  "icons": { "128": "icon128.png" },

  "action": { "default_popup": "popup.html", "default_title": "Block Those Ads" },

  "permissions": [
    "declarativeNetRequest",
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ],
  "optional_host_permissions": ["<all_urls>"],

  "background": { "service_worker": "background.js" },

  "declarative_net_request": {
    "rule_resources": [
      { "id": "adBlockRules", "enabled": true, "path": "rules.json" }
    ]
  }
}
